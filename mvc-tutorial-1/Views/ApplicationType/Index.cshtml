@model  IEnumerable<mvc_tutorial_1.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Application Type List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Create New Application Type
                </a>
            </div>
        </div>

        <br /><br />

        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <th>Application Name</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td width="80%">@obj.Name</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2 w-100">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" type="submit" class="btn btn-danger mx-2 w-100" value="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                    @*<a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        Delete
                                    </a>*@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No application type exists.</p>
        }
    </div>
</form>
